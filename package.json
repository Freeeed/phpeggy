{
  "name": "phpeggy",
  "version": "2.0.0",
  "description": "PHP target for Peggy parser generator",
  "main": "src/phpeggy.js",
  "peerDependencies": {
    "peggy": "1.2.0"
  },
  "devDependencies": {
    "@peggyjs/eslint-config": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.3.3",
    "eslint": "^7.32.0",
    "mocha": "^9.1.2",
    "peggy": "1.2.0",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "lint": "eslint .",
    "phpcsfix": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --dry-run --diff --using-cache=no",
    "php-static": "for f in test/fixtures/*.php; do echo \"\nProcessing $f ...\nPHPStan:\"; vendor/bin/phpstan analyse $f -c phpstan.neon; echo \"Psalm:\" ; vendor/bin/psalm $f; done",
    "psalm": "./vendor/bin/psalm",
    "rebuild-fixtures": "rm -f test/fixtures/*.php && GENERATE_MISSING_FIXTURES=y npm test",
    "pretest": "npm run lint",
    "test": "mocha",
    "posttest": "npm run phpcsfix && npm run php-static"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marcelbolten/phpeggy.git"
  },
  "keywords": [
    "peggy",
    "plugin",
    "php",
    "parser",
    "generator",
    "PEG"
  ],
  "contributors": [
    "Elantcev Mikhail",
    "James Nylen <jnylen@gmail.com>",
    "Marcel Bolten <github@marcelbolten.de>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcelbolten/phpeggy/issues"
  }
}
